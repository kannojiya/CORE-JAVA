package custmerdetails;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Custmerdetails {
    public static void main(String[] args) throws IOException {
        int custid;
        String custname;
        int custage;
        float sal;
        {
        InputStreamReader is =new InputStreamReader(System.in);
        BufferedReader br=new BufferedReader(is);
        System.out.println("Enter custmer id:");
        custid=Integer.parseInt (br.readLine());
        System.out.println("enter cust name");
        custname=br.readLine();
        System.out.println("enter cust age");
        custage=Integer.parseInt (br.readLine());
        System.out.println("enter cust salary");
         sal=Float.parseFloat (br.readLine());
     
    }
        System.out.println("id is"+custid);
        System.out.println("name is"+custname);
        System.out.println("age is"+custage);
        System.out.println("salary is"+sal);
        
